<!DOCTYPE html>
<html>
<head>
  
  <title>Bloodstream</title>
  
  <!--  integrity=“sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u” crossorigin=“anonymous” -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  
  <%= favicon_link_tag 'favicon.ico' %>
  
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <%= csrf_meta_tag %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="navbar-header">
    <a class="navbar-brand" href="/"><%= image_tag 'blood.png', alt: 'Bloodstream logo', height: 40, width: 40 %>
    </a>
  </div>
  <% if signed_in? %>
    <% if current_user.admin? %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin Tools
          <ul class="dropdown-menu">
            <li><%= link_to "Donor List", users_path %></li>
            <li><%= link_to "All Events", events_path %></li>
          </ul>
          <%= link_to 'Create Event', new_event_path %>
        </li>
      </ul>
    <% end %>

    <% if current_user.donor? %>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "About Us", "/" %>
          </li>
  
          <li>
            <%= link_to "My Profile", user_path(current_user) %>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">DONATE NOW
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Blood Drives", events_path %></li>
              <li><%= link_to "FAQs", "/" %></li>
            </ul>
          </li>
          <% end %>
        </ul>

      
        <ul class="nav navbar-nav navbar-right">
      <!-- <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li> -->
          <li><%= link_to "Sign Out", sign_out_path, :method => :delete %></li>
        </ul>
  <% else %>
      <div class="navbar-header">
        <a class="navbar-brand"><a href="/"><%= image_tag 'blood.png', alt: 'Bloodstream logo', height: 40, width: 40 %></a>
      </div>
      <div>
      <ul class="nav navbar-nav">
          <li>
            <%= link_to "About Us", "/" %>
          </li>
          <!-- <li>
            <%#= link_to "FAQs", user_path(current_user) %>
          </li> -->
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">DONATE NOW
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Blood Drives", events_path %></li>
              <li><%= link_to "FAQs", "/" %></li>
            </ul>
          </li>
        </div>

      <!-- <div class="input-group search">
        <input type="text" class="form-control" placeholder="Search">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
      </div> -->
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign In", sign_in_path %></li>
          <% if Clearance.configuration.allow_sign_up? %>
            <li><%= link_to "Sign Up", sign_up_path %></li>
          <% end %>
      </ul>
    <% end %>     
<!--     </div> -->
</nav>

<!--   </div> -->
<br><br><br>
  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>