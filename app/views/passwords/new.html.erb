<div id="clearance" class="password-reset">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
   <div class="form-group">
      <%= form.label :email, class: "col-md-4 control-label" %>
      <%= form.text_field :email, :required => 'required', class: "form-control" %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>
