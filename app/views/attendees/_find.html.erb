
<table class= "table">
 <thead>
    <tr>
      <!-- <th>id</th> -->
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of birth</th>
      <th>Blood type</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Points</th>

    </tr>
  </thead>

  <tbody>
    <% if @attendee != nil %>
        <% @donors.each do |a| %>
        	<% if a.id != @attendees.user_id  %>
          <tr>
            <td><%= a.first_name %></td>
            <td><%= a.last_name %></td>
            <td><%= a.date_of_birth %></td>
            <td><%= a.blood_type %></td>
            <td><%= a.address %></td>
            <td><%= a.phone_number %></td>
            <td><%= a.email %></td>
            <td><%= a.points %></td>
            <td>
              <%= form_for @code, :url => new_attendee_path, :html => {:method => :post} do |c| %>
                  <%= c.hidden_field :user_id, value: a.id %>
                  <%= c.hidden_field :event_id, value: @event.id %>
                  <%= submit_tag "Add Donor as Attendee" %>
            </td>
              <% end %>
            <% end %>
          <% end %>
      <% else %>      
        <% @donors.each do |a| %>
            <tr>
              <td><%= a.first_name %></td>
              <td><%= a.last_name %></td>
              <td><%= a.date_of_birth %></td>
              <td><%= a.blood_type %></td>
              <td><%= a.address %></td>
              <td><%= a.phone_number %></td>
              <td><%= a.email %></td>
              <td><%= a.points %></td>
              <td>
                <%= form_for @code, :url => new_attendee_path, :html => {:method => :post} do |c| %>
                    <%= c.hidden_field :user_id, value: a.id %>
                    <%= c.hidden_field :event_id, value: @event.id %>
                    <%= submit_tag "Add Donor as Attendee" %>
              </td>
                <% end %>
              <% end %>
      <% end %>
    </tr>
  </tbody>
</table

