<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

<div class="container">
  <%= form_for @user, :html => {:class => "form-horizontal center"}  do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="form-group">
      <%= form.label "Password", class: "col-md-4 control-label" %>
      <div class="col-md-4">
      <%= form.password_field :password, :required => 'required', class: "form-control"%>
      *at least 7 characters
    </div>
  </div>


    <div class="submit-field">
      <%= form.submit "Submit", class: "btn btn-link btn-lg" %>
    </div>

  
  <% end %>
</div>
</div>

