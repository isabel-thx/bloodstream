<table class="table">
  <h1 style="margin-top: 100px">Blood Drives</h1>
  <thead>
    <tr>
      <th>Organizer</th>
      <th>Venue</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.organizer %></td>
        <td><%= event.venue %></td>
        <% if event.end_date.nil? %>
          <td><%= event.start_date.strftime('%A, %d %B %Y') %></td>
        <% else %>
          <td><%= event.start_date.strftime('%A, %d %B %Y') %> - <%= event.end_date.strftime('%A, %d %B %Y') %></td>
        <% end %>
        <td><%= event.start_time.strftime('%H:%M') %> - <%= event.end_time.strftime('%H:%M') %></td>
        <% if signed_in? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

