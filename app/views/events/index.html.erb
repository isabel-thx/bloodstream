<div id="event_here">
<%= content_for :navbar do %>
  <div class="event_page">
    <%= render partial: 'layouts/navbar' %>
    <div class="event_page_content">
      <div class="event_page_background">
        <h1>Events</h1>
      </div>
    </div>
  </div>
<% end %>

<div class="event_header justify-content-center" style="margin-left: 160px; margin-top: 40px; margin-bottom:40px;">
  <% @events.each do |event| %>
    <div class="class_index card mt-2 mb-4 ml-3 mr-3 justify-content-center" style="width: 20rem; height: 32rem;">
      <div class="class_index card-img-top mt-2 mb-4">
        <img style="height: 14rem; width: 18.8rem;" src="<%= event.photos[0] %>" alt="Event picture">
        <div class="card-block" style="height: 200px; padding-top: 10px; padding-left: 10px;" >
        <h3 class="card-title"><%= event.title.truncate_words(8) %></h3>
        <p class="card-text">@ <%= event.venue %></p>
        <p class="card-text">
          <% if event.start_date == event.end_date %>
            <%= event.start_date.strftime('%a, %d %b %Y') %>
          <% else %>
            <%= event.start_date.strftime('%a, %d %b %Y') %> - <%= event.end_date.strftime('%a, %d %b %Y') %>
          <% end %> <br> <%= event.start_time.strftime('%I:%M %p') %> - <%= event.end_time.strftime('%I:%M %p') %></p><br><br>
        <a href="/events/<%= event.id %>" class="btn btn-primary" role="button">More Details</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<h5 style="color: black; margin-bottom: 1200px;"><%= will_paginate @events%></h5>
</div>
