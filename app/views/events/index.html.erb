<div class="row" style="margin-left: 100px; margin-top: 150px;">
  <div class="col-sm-6 col-md-4">
    <% @events.each do |event| %>
      <div class="card" style="width: 20rem; height: 32rem;">
        <div class="card-img-top">
          <img style="height: 15rem; width: 19.9rem;" src="<%= event.photos[0] %>" alt="...">
          <div class="card-block" style="height: 200px; padding-top: 10px; padding-left: 10px;" >
          <h3 class="card-title"><%= event.title.truncate_words(8) %></h3>
          <p class="card-text"><%= event.venue %></p>
          <p class="card-text">
            <% if event.start_date == event.end_date %>
              <%= event.start_date.strftime('%A, %d %B %Y') %> (1 day)
            <% else %>
              <%= event.start_date.strftime('%A, %d %B %Y') %> - <%= event.end_date.strftime('%A, %d %B %Y') %> (<%= (event.start_date..event.end_date).to_a.length %> days)
            <% end %> at <%= event.start_time.strftime('%I:%M %p') %> - <%= event.end_time.strftime('%I:%M %p') %></p>
          <a href="/events/<%= event.id %>" class="btn btn-primary" role="button">More Details</a>
          <!-- <a href="#" class="btn btn-default" role="button">Button</a></p> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<h5 style="color: black"><%= will_paginate @events%></h5>





