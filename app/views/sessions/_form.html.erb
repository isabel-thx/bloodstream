  <div class="container">
  <%= form_for :session, url: session_path, :html => {:class => "form-horizontal center"} do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "col-md-4 control-label"%>
     <div class="col-md-4">
    <%= form.text_field :email, :required => 'required', class: "form-control" %>
  </div>
</div>

  <div class="password-field">
    <%= form.label :password, class: "col-md-4 control-label" %>
     <div class="col-md-4">
    <%= form.password_field :password, :required => 'required', class: "form-control" %>
      <%= link_to t(".forgot_password"), new_password_path %>
  </div>
</div>
  
  <div class="submit-field">
    <%= form.submit "Submit", class: "btn btn-link btn-lg" %>
  <br>Or<br>
    
<%= link_to "Sign in with Facebook", "/auth/facebook" %>
   <br><br><br>


  <% end %>
</div>
